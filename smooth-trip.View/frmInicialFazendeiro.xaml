<Window x:Class="smooth_trip.frmInicialFazendeiro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:smooth_trip"
        mc:Ignorable="d"
        Title="frmInicialFazendeiro" Height="640" Width="360" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid x:Name="frmTelaInicialFazendeiro">
        <TextBlock x:Name="txtNomeApp" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Smooth Trip" VerticalAlignment="Top" Width="360" Height="70" FontSize="36" Padding="80,5,0,0" Background="#FF078231" Foreground="White"/>
        <Image x:Name="imgFechar" HorizontalAlignment="Right" Height="30" Margin="0,20,20,0" VerticalAlignment="Top" Width="30" Source="/x.png" MouseLeftButtonDown="Fechar"/>
        <Image x:Name="imgMenu" HorizontalAlignment="Left" Height="49" Margin="10,10,0,0" VerticalAlignment="Top" Width="49" MouseLeftButtonDown="AbrirMenu" Source="/barra-de-menu.png"/>


        <Image x:Name="imgLogo" HorizontalAlignment="Center" Height="310" VerticalAlignment="Top" Width="310" Source="/smooth-trip-logo.png" Margin="0,155,0,0"/>
        <TextBlock x:Name="txtSlogan" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Height="27" FontSize="18" Padding="20,0,0,0" Foreground="#FF078231" Margin="0,425,0,0" FontWeight="Bold"><Run Text="Conforto e Segurança"/><Run Language="pt-br" Text=" "/><Run Text="do Início ao Fim!"/></TextBlock>


        <TextBlock x:Name="txtSobreNos" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Sobre Nós" VerticalAlignment="Top" Width="88" Height="32" FontSize="18" Padding="0,0,0,0" Foreground="#FF080707" Margin="0,538,0,0" MouseLeftButtonDown="IrParaFrmSobreNos"/>
    </Grid>
</Window>
